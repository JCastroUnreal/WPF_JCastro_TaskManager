<UserControl x:Class="WPF_JCastro_TaskManager.Views.AddTasks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border Style="{DynamicResource border}">
            <StackPanel Margin="10">
                <TextBlock Text="Nombre de la Tarea"
                           Style="{DynamicResource listItemTitle}" />
                <TextBox x:Name="TaskNameTextBox"
                         Margin="0,0,0,10" />
                <TextBlock Text="Descripción"
                           Style="{DynamicResource listItemTitle}" />
                <TextBox x:Name="TaskDescriptionTextBox"
                         Margin="0,0,0,10" />
                <TextBlock Text="Día"
                           Style="{DynamicResource listItemTitle}" />
                <DatePicker x:Name="TaskDatePicker"
                            Margin="0,0,0,10" />
                <Button Content="Agregar Tarea"
                        Style="{DynamicResource normalButton}"
                        Click="AddTaskButton_Click"
                        MouseEnter="Button_MouseEnter"
                        MouseLeave="Button_MouseLeave" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
